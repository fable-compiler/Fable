{
  "private": true,
  "scripts": {
    "fable": "dotnet run -c Release -p src/dotnet/Fable.Compiler fable-splitter --force-pkgs",
    "build-tests": "yarn fable --args \"-c tests/splitter.config.js\"",
    "build-tests-opt": "yarn fable --experimental optimize-fcs --args \"-c tests/splitter.config.js -d:OPTIMIZE_FCS\"",
    "postbuild-tests": "yarn test",
    "test": "mocha build/tests --reporter dot -t 10000",
    "build-repl": "yarn fable --args \"-c src/dotnet/Fable.Repl/splitter.config.js --commonjs\"",
    "build-repl-modules": "yarn fable --args \"-c src/dotnet/Fable.Repl/splitter.config.js \"",
    "bundle-repl": "webpack-cli --config src/dotnet/Fable.Repl/webpack.config.js",
    "build-compiler": "yarn fable --args \"-c src/js/fable-compiler/src/splitter.config.js\"",
    "bundle-compiler": "webpack-cli --config src/js/fable-compiler/src/webpack.config.js",
    "fable-compiler": "node src/js/fable-compiler/dist/app",
    "build-fable-tests": "yarn fable-compiler tests/Main/Fable.Tests.fsproj build/tests-out --commonjs",
    "build-fable-tests-opt": "yarn fable-compiler tests/Main/Fable.Tests.fsproj build/tests-out --commonjs --optimize-fcs",
    "run-fable-tests": "mocha --colors build/tests-out/tests/Main/Main.js",
    "build-bench": "yarn fable --args \"-c src/dotnet/Fable.Repl/bench/splitter.config.js --commonjs\"",
    "build-bench-opt": "yarn fable --experimental optimize-fcs --args \"-c src/dotnet/Fable.Repl/bench/splitter.config.js --commonjs\"",
    "start-bench": "cd src/dotnet/Fable.Repl/bench && node out/app ../metadata/ test_script.fs",
    "build-bench2": "yarn fable --args \"-c src/dotnet/Fable.Repl/bench2/splitter.config.js\"",
    "start-bench2": "cd src/dotnet/Fable.Repl/bench2 && node out/app ../metadata/ test_script.fs out/test_script.js",
    "test-bench2": "node src/dotnet/Fable.Repl/bench2/out/test_script.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@babel/standalone": "^7.1.0",
    "@babel/template": "^7.1.2",
    "@types/node": "^10.11.7",
    "babel-loader": "^8.0.4",
    "fable-loader": "^2.0.0",
    "fable-splitter": "^2.0.1",
    "mocha": "^5.2.0",
    "terser": "^3.10.0",
    "terser-webpack-plugin": "^1.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
