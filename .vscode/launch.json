{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/dotnet/Fable.Compiler/bin/Debug/netcoreapp2.0/dotnet-fable.dll",
            "args": ["yarn-splitter", "--fable-core", "../../../build/fable-core"],
            "cwd": "${workspaceRoot}/src/tools/",
            "stopAtEntry": true,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Node",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Quicktest.js",
            "program": "${workspaceRoot}/src/tools/temp/QuickTest.js",
            "args": ["--help"],
            "cwd": "${workspaceRoot}/src/tools/temp",
            "stopOnEntry": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Bundler",
            "program": "${workspaceRoot}/node_modules/.bin/rollup", "args": ["-c"],
            // "program": "${workspaceRoot}/node_modules/.bin/webpack",
            "cwd": "${workspaceRoot}/src/tools",
            "stopOnEntry": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch REPL",
            "url": "http://localhost:8080/repl.html",
            "webRoot": "${workspaceRoot}/src/dotnet/Fable.JS/demo"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REPL test",
            "program": "${workspaceRoot}/src/dotnet/Fable.JS/testapp/out/app.js",
            "args": ["test_script.fs", "out/test_script.js"],
            "cwd": "${workspaceRoot}/src/dotnet/Fable.JS/testapp"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REPL bench",
            "program": "${workspaceRoot}/src/dotnet/Fable.JS/bench/out/app.js",
            "args": [],
            "cwd": "${workspaceRoot}/src/dotnet/Fable.JS/bench"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REPL bench (ES6)",
            "program": "${workspaceRoot}/src/dotnet/Fable.JS/bench/out/app.mjs",
            "runtimeArgs": ["--experimental-modules"],
            "args": [],
            "cwd": "${workspaceRoot}/src/dotnet/Fable.JS/bench"
        }
    ]
}
